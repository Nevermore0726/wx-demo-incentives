/* pages/myAccount/myAccount.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.h1 {
    height: 1px;
    margin-left:50px;
    background: #f0f0f0;
}

/* 头部登陆 */
.login {
    /* border: 10px solid #f0f0f0;  */
}

.login .loginbg {
    width: 100%;
    -webkit-filter: blur(2px);
    filter: blur(2px);
}

.login .personal_logo {
    position: absolute;
    left: 0;
    top: 55px;
    width: 70px;
    height: 70px;
    margin-left: 20px;
}

.login .userinfo {
    position: absolute;
    top: 60px;
    margin-left: 100px;
}

.login .userinfo .title {
    font-size: 20px;
    color: #fff;
}

.thirdblock {
    background-color: #fff;
    /* border: 10px solid #f0f0f0; */
    font-size: 16px;
}

/* 设置条目 */

.item {
    height: 50px;
    line-height: 50px;
    padding-left: 15px;
    background-color: #fff;
}

.item_ico {
    float: left;
    width: 27px;
    height: 20px;
    padding: 13px 15px 10px 0;
}

.item_arrow {
    float: right;
    height: 26px;
    width: 26px;
    margin: 11px 20px;
}